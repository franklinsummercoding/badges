<div class="ui modal small sign-in">
  <i class="close icon"></i>

  <div class="header">
    FSC
  </div>

  <div class="content">
    <form class="sign-in-form">
    <div style="margin-bottom:12px;" class="ui form">
      <div class="field">
        <label htmlFor="">Name</label>
        <input type="text" class="sign-in-email" required>
      </div>

      <div class="field">
        <label htmlFor="">Password</label>
        <input type="password" class="sign-in-password" required>
      </div>
    </div>


  </div>

  <div class="actions">
    <div class="ui black deny button">
      Cancel
    </div>
    <button type="submit" class="ui green right labeled icon button">
      Sign In
      <i class="checkmark icon"></i>
    </button>
  </div>
    </form>

</div>

</div>

<script type="text/javascript">

  $('form.sign-in-form').submit(function (e) {
    e.preventDefault();
    $.ajax({
      url: '/session',
      type: 'POST',
      data: {
        user: {
          name: $('.sign-in-email').val(),
          password: $('.sign-in-password').val()
        }
      }, success: function (model, resp, object) {
        debugger
        location.href = '/'
      }
    })
  })

</script>
